{
  "name": "stylelint-plugin-carbon-tokens",
  "version": "2.0.0-alpha.1",
  "description": "A stylelint plugin to support the use of carbon component tokens.",
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "css",
    "carbon",
    "scss"
  ],
  "author": "Lee Chase <lee.chase@uk.ibm.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/stylelint-plugin-carbon-tokens/issues"
  },
  "dependencies": {
    "@carbon/styles": "^1.5.0",
    "lodash": "^4.17.21",
    "postcss-scss": "^4.0.4",
    "postcss-value-parser": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-preset-jest": "^28.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-stylelint": "^15.1.0",
    "github-contributors-list": "^1.2.5",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-cli": "^28.1.1",
    "lint-staged": "^13.0.2",
    "npm-check-updates": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "npmpub": "^5.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "stylelint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "globals": {
      "__dirname": true,
      "testRule": true,
      "testConfig": true
    },
    "rules": {
      "eqeqeq": "error",
      "no-use-before-define": [
        "error",
        "nofunc"
      ],
      "strict": [
        "error",
        "global"
      ],
      "arrow-spacing": "error",
      "guard-for-in": "off",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-const": "error",
      "template-curly-spacing": "error",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "version": ">=8.0.0",
          "ignores": [
            "modules"
          ]
        }
      ],
      "eslint-comments/no-unlimited-disable": "off",
      "node/no-extraneous-import": "off",
      "sort-requires/sort-requires": "off"
    }
  },
  "files": [
    "dist",
    "docs",
    "src/**/README.md",
    "!**/__tests__"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/stylelint-plugin-carbon-tokens.git"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "testRegex": ".*\\.test\\.js$|src/.*/__tests__/.*\\.js$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist",
    "clean": "rimraf node_modules dist",
    "format": "prettier --write '**/*.{scss,css,js,md}' '!**/{build,es,lib,storybook,ts,umd,dist,.coverage}/**'",
    "format:diff": "prettier --list-different '**/*.{scss,css,js,md}' '!**/{dist,storybook-static,.coverage}/**'",
    "format:staged": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "lint": "eslint src --ignore-path .gitignore",
    "prepare": "husky install",
    "prettify": "prettier --write \"src/**/*.js\"",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "release": "npmpub",
    "jest": "jest",
    "test": "npm run jest",
    "test-c": "npm run jest -- --coverage",
    "watch": "npm run jest -- --watch",
    "ci-check": "yarn format:diff && yarn test --maxWorkers=5 && yarn test && yarn build",
    "test-rule": "npm run jest",
    "test-util": "npm run jest",
    "generate-contributors-list": "githubcontrib --owner lee-chase --repo stylelint-scss --cols 6 --sortOrder desc --filter greenkeeper[bot],dependabot[bot] --showlogin true --imagesize 80 --format html",
    "upgrade:dependencies:top": "npm-check-updates -u --dep dev,peer,prod --reject '/(carbon|^react$|^react-dom$)/'",
    "upgrade:dependencies:packages": "yarn -s run-all --no-sort --concurrency 1 upgrade-dependencies",
    "upgrade:dependencies:yarn": "yarn set version latest",
    "upgrade:automatic": "run-s -s upgrade:dependencies:*",
    "upgrade:carbon": "npm-check-updates -u --dep dev,peer,prod --packageFile '{package.json,{config/**,packages/**}/package.json}' --filter '/carbon/'",
    "upgrade:manual": "sh ./scripts/monorepo-npm-upgrade.sh"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --write"
    ]
  }
}
